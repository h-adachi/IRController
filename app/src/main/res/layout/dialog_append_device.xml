<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carrier_type" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_carrier_type">
            <RadioButton
                android:checked="true"
                android:text="NEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type_nec"/>
            <RadioButton
                android:text="AEHA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type_aeha"/>
            <RadioButton
                android:text="SONY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type_sony"/>
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer_type" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_type_hint"
            android:id="@+id/device_customer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_name" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_name_hint"
            android:id="@+id/device_name"/>

    </LinearLayout>
</LinearLayout>